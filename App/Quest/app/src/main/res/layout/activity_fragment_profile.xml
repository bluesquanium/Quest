<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profileMainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profilePictureView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/profilePictureSettingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/settingImageView"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/setting" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profilePictureNameView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="81dp">

                            <ImageView
                                android:id="@+id/profileImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="profilesetting"
                                app:srcCompat="@drawable/profile_default" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/profileNameTextView"
                            style="@style/AppMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Do Jin Hyun"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/profileIntroductionView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/introductionTextView"
                        style="@style/AppMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소개"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myIntroductionTextView"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="무엇이든 도와드릴 준비가 되어 있습니다! 저에게 맡겨만 주세요!"
                        android:textColor="#808080"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/myQuestView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/AppMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="진행중인 퀘스트"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/nextButtonImage"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:foregroundGravity="center_horizontal"
                        tools:srcCompat="@drawable/next_image" />
                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/AppMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="금액"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/AppMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="0 Q"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="충전하기" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="출금하기" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/npcModeView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/npcModeTextView"
                        style="@style/AppMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NPC 모드로 전환"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/nextButtonImage1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:foregroundGravity="center_horizontal"
                        tools:srcCompat="@drawable/next_image" />

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/policyView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/policyTextView"
                        style="@style/AppMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="약관"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/nextButtonImage2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:foregroundGravity="center_horizontal"
                        tools:srcCompat="@drawable/next_image" />

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/signoutView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/signoutTextView"
                        style="@style/AppMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="로그아웃"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/nextButtonImage3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:foregroundGravity="center_horizontal"
                        tools:srcCompat="@drawable/next_image" />

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#BEBEBE" />

                <LinearLayout
                    android:id="@+id/copyrightView"
                    android:layout_width="380dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/copyrightTextView"
                        style="@style/AppMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Copyright 2020.Quest.All rights reserved."
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>
    </LinearLayout>

</ScrollView>